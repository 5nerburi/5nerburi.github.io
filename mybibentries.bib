@Article{KIM201751,
  Title                    = {Coupled experimental study and thermodynamic optimization of the K2O-SiO2 system},
  Author                   = {Dong-Geun Kim and Marie-Aline Van Ende and Pierre Hudon and In-Ho Jung},
  Journal                  = {Journal of Non-Crystalline Solids},
  Year                     = {2017},
  Pages                    = {51 - 64},
  Volume                   = {471},

  Abstract                 = {Key phase diagram experiments and thermodynamic optimization were performed for the binary K2O-SiO2 system. For the first time, the temperature of eutectic reaction: Liquid→K4SiO4+K2SiO3 was successfully measured at 714±6°C using thermal analysis technique with sealed Pt capsules. Thermodynamic optimization based on the critical evaluation of all available experimental data was conducted to obtain a set of self-consistent thermodynamic functions for the K2O-SiO2 system. This optimization can well reproduce all available and reliable thermodynamic properties and phase diagram data as well as melt structure in the K2O-SiO2 system.},
  Doi                      = {https://doi.org/10.1016/j.jnoncrysol.2017.04.029},
  ISSN                     = {0022-3093},
  Keywords                 = {KO-SiO, Thermodynamic optimization, Phase diagram, Thermal analysis, Sealed Pt capsule},
  Owner                    = {Dong-Geun},
  Timestamp                = {2018.02.11},
  Url                      = {http://www.sciencedirect.com/science/article/pii/S0022309317302065}
}

